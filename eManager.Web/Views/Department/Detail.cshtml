@model eManager.Core.Department

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div>
    <h4>Department Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
@Html.ActionLink("Create an emloyee","Create", "Employee", new { DepartmentId= Model.Id}, null)
<table>
    <tr>
        <th>Name</th>
    </tr>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.Name</td>
        </tr>
    }
</table>
